<!-- About -->
{% if theme_config.footer.title or theme_config.footer.description %}
  <section class="blurb">
    <h2>{{ theme_config.footer.title|e }}</h2>
    {{ theme_config.footer.description|markdown }}
    <ul class="actions {% if show_sidebar == false %}special{% endif %}">
      <li><a href="{{ theme_config.footer.button_url|e('html_attr') }}"
            class="button"
            aria-label="{{ theme_config.footer.title|e('html_attr') }}"
            rel="noopener noreferrer">{{ theme_config.footer.button_text|e }}</a></li>
    </ul>
  </section>
{% endif %}

<!-- Social links and Copyright -->
<section id="footer">
  {% if theme_var('enable_social') %}
  <ul class="icons">
    {{ include('partials/social.html.twig') }}
  </ul>
  {% endif %}
  <p class="copyright">&copy; {{ 'now'|date('Y') }} {{ site.author.name }}. {{ config.theme.footer.copyright_text|markdown(false) }}.</p>
</section>
